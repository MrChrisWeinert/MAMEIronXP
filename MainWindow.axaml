<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAMEIronXP"
        mc:Ignorable="d" d:DesignWidth="2560" d:DesignHeight="1440"
        WindowState="FullScreen"
        Cursor="None"
        x:Class="MAMEIronXP.MainWindow"
        Title="MAMEIronXP">
  <Window.Resources>
    <local:MyConverter x:Key="isFavoriteConverter"/>
  </Window.Resources>
  <Panel>
    <Panel>
      <StackPanel Orientation="Horizontal" ZIndex="15" HorizontalAlignment="Right">
        <Label Content="m" Width="66" FontFamily="PacFont Good" FontSize="72" Foreground="#FF46BFEE"/>
        <Label Content="AME" Margin="-9,0,0,0" Width="240" FontFamily="PacFont Good" FontSize="72" Foreground="Black"/>
        <Label Content="i" Width="34" FontFamily="PacFont Good" FontSize="72" Foreground="#FF46BFEE"/>
        <Label Content="RON" Margin="-5,0,0,0" Width="202" FontFamily="PacFont Good" FontSize="72" Foreground="Black"/>
        <Label Content="xp" Width="200" FontFamily="PacFont Good" FontSize="72" Foreground="#FF46BFEE"/>
        <Label Content="1" Width="70" FontFamily="PacFont Good" FontSize="72" Background="#00FDFF00" Foreground="#FFFDFF00"/>
        <Label Content="::::::" Width="184" FontFamily="PacFont Good" FontSize="72" Foreground="Black" Background="{x:Null}" />
        <Label Content="9" Width="66" FontFamily="PacFont Good" FontSize="72" Foreground="#FFEA82E5"/>
      </StackPanel>
      <Panel ZIndex="20">
        <Image Name="MyImage" Height="150" Width="160"/>
      </Panel>
      <Panel ZIndex="30" HorizontalAlignment="Right">
        <ListBox x:Name="GamesListBox">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding IsFavorite, Converter={StaticResource isFavoriteConverter}}" FontFamily="Pacfont Good" />
                <TextBlock Text="{Binding Description}" FontFamily="Arcade" />
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Panel>
      <Panel ZIndex="10">
        <Image Source="avares://MAMEIronXP/Assets/MAMEIronXPCabinetV2.png" />
      </Panel>
    </Panel>
  </Panel>
</Window>