<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        Cursor="None"
        x:Class="MAMEIronXP.ExitWindow"
        Title="ExitWindow"
        WindowState="FullScreen"
        Opacity="100"
        TransparencyBackgroundFallback="Black"
        Background="Black"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Loaded="ExitWindow_Loaded">
  <ListBox x:Name="ExitListBox" Width="425" Height="175" Focusable="True" CornerRadius="5" Opacity="100" FontFamily="avares://MAMEIronXP/Assets/Arcade.ttf#" Background="#F2F2F2" Foreground="Black">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <StackPanel Orientation="Vertical">
          <TextBlock Text="{Binding}" FontSize="36" />
        </StackPanel>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</Window>
